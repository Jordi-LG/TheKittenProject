<div class="row">
  <div class="col-md-8 offset-md-2">
    <br><br><br><br>
    <div class="bdi">
      <%= form_for resource, as: resource_name, url: session_path(resource_name),  html: { class: "form-signin mt-3" } do |f| %>
        <h1 class="h3 mb-3 font-weight-normal text-center">Connexion</h1>

        <div class="form-group">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" , placeholder: "Entrer votre email"%>
        </div>

        <div class="form-group">
          <%= f.label :password %><br />
          <%= f.password_field :password, autocomplete: "current-password", class: "form-control", placeholder: "Entrer votre mot de passe" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %>

          <div class="actions mt-5">
            <%= f.submit "Connexion", class: "btn btn-lg btn-primary btn-block"%>
          </div>
      <% end %>
      <br>
<%= render "devise/shared/links" %>
    </div>
  </div>
</div>
